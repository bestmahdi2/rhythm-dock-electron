{
  "name": "rhythm-dock-electron",
  "version": "1.1.0",
  "description": "A lightweight, feature-rich music player.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-rebuild",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Masterous",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "electron-store": "^7.0.0",
    "howler": "^2.2.4",
    "music-metadata": "^7.14.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.masterous.rhythmdock",
    "productName": "Rhythm Dock",
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "**/src/assets/**"
    ],
    "fileAssociations": [
      {
        "ext": "mp3",
        "name": "MP3 Audio File",
        "description": "Audio file",
        "role": "Viewer",
        "icon": "src/assets/icons/icon.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
