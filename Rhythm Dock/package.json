{
  "name": "rhythm-dock-electron",
  "version": "1.3.6",
  "description": "A lightweight, feature-rich music player.",
  "main": "src/main.js",
  "homepage": "https://github.com/bestmahdi2/rhythm-dock-electron",
  "repository": {
    "type": "git",
    "url": "https://github.com/bestmahdi2/rhythm-dock-electron.git"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build:win64": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "dist:win": "npm run build:win64 && npm run build:win32",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
"author": {
  "name": "Masterous",
  "url": "https://alibadiee.ir"
},
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "electron-store": "^7.0.0",
    "howler": "^2.2.4",
    "music-metadata": "^7.14.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.masterous.rhythmdock",
    "productName": "Rhythm Dock",
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "**/src/assets/**"
    ],
    "fileAssociations": [
      {
        "ext": "mp3",
        "name": "MP3 Audio File",
        "description": "Audio file",
        "role": "Viewer",
        "icon": "src/assets/icons/icon.ico"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/icon.ico",
      "artifactName": "${productName} Setup ${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
